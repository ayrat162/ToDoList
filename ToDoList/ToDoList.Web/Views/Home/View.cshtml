@model ToDoList.Web.ViewModels.ToDoTaskViewModel
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tasks List:</h2>
<p>
    <strong>@Html.ActionLink("Create a New Task", "New", "Tasks")</strong>
</p>
<table class="table table-hover table-striped">
    <thead>
    <tr>
        <th>
            Description
        </th>
        <th>
            Due Date & Time
        </th>
        <th>
            Classification
        </th>
        <th>
            Status
        </th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td>
            @Html.ActionLink(@Model.Description, "Info", "Tasks", new { id = @task.Id }, null)
        </td>
        <td>
            @Model.DueDateTime
        </td>
        <th>
            @Model.Classification
        </th>
        <th>
            @Model.Status
        </th>
    </tr>
    </tbody>
</table>

