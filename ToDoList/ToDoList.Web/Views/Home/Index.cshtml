@using ToDoList.Core.DTO
@using ToDoList.Web.ViewModels
@model ViewAllTasksViewModel
@{
    ViewBag.Title = "List of the Tasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Tasks List</h2>
<p>
    <strong>@Html.ActionLink("Create a New Task", "New", "Home")</strong>
</p>
<table id="tasks" class="table table-hover table-striped">
    <thead>
    <tr>
        <th>
            Description
        </th>
        <th>
            Due Date & Time
        </th>
        <th>
            Classification
        </th>
        <th>
            Status
        </th>
        <th>
                
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (ToDoTaskDTO task in Model.ToDoTaskDtos)
    {
        <tr>
            <td>
                @Html.ActionLink(@task.Description, "View", "Home", new { id = @task.Id }, null)
            </td>
            <td>
                @task.DueDateTime
            </td>
            <td>
                @if (@Model.Classifications.SingleOrDefault(c => c.Id == task.ClassificationId) != null)
                {
                    @Model.Classifications.SingleOrDefault(c => c.Id == task.ClassificationId).Name
                }
                else { 
                    @:N/A
                }
            </td>
            <td>
                @task.Status
            </td>
            <td>
                <button data-task-id="@task.Id" class="btn-link js-delete">
                    Delete
                </button>
            </td>
        </tr>
    }


    </tbody>  
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#tasks").DataTable();
            $("#tasks").on("click", ".js-delete",
                function () {
                    var button = $(this);
                    bootbox.confirm("Are you sure that you want to delete the customer?",
                        function(result) {
                            if (result) {
                                $.ajax({
                                    url: "/api/tasks/" + button.attr("data-task-id"),
                                    method: "DELETE",
                                    success: function() {
                                        button.parents("tr").remove();
                                    }
                                });
                            }
                        });
                });
        })
    </script>

}