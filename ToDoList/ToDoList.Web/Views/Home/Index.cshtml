@using ToDoList.Web.Models
@using ToDoList.Web.ViewModels
@model IEnumerable<ToDoList.Web.ViewModels.ToDoTaskViewModel>
@{
    ViewBag.Title = "List of the Tasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Tasks List:</h2>
<p>
    <strong>@Html.ActionLink("Create a New Task", "New", "Tasks")</strong>
</p>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                Description
            </th>
            <th>
                Due Date & Time
            </th>
            <th>
                Classification
            </th>
            <th>
                Status
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (ToDoTaskViewModel task in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(@task.Description, "Info", "Tasks", new { id = @task.Id }, null)
                </td>
                <td>
                    @task.DueDateTime
                </td>
                <th>
                    @task.Classification
                </th>
                <th>
                    @task.Status
                </th>
            </tr>
        }


    </tbody>
</table>