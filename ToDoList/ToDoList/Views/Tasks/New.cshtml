@model ToDoList.ViewModels.EditTaskViewModel
@{
    ViewBag.Title = "New ToDo Task";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Task</h2>

@using (Html.BeginForm("Save", "Tasks"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.ToDoTask.Description)
        @Html.TextBoxFor(m => m.ToDoTask.Description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ToDoTask.DueDateTime)
        @Html.TextBoxFor(m => m.ToDoTask.DueDateTime, "{0:d MMM yyyy H:mm:ss}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ToDoTask.Status)
        @Html.TextBoxFor(m => m.ToDoTask.Status, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ToDoTask.ClassificationId)
        @Html.DropDownListFor(m => m.ToDoTask.ClassificationId, new SelectList(Model.Classifications, "Id", "Name"), "",  new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.ToDoTask.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}