@model ToDoList.Models.ToDoTask
@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}            

<h2>Task: @Model.Description</h2>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th style="width:150px">
                Image
            </th>
            <th>
                Description
            </th>
            <th>
                Due Date & Time
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @if (@Model.Image!=null)
                {
                    @Html.Raw("<img style='width:100px; height:100px;' src=\"data:image/jpeg;base64,"
                              + Convert.ToBase64String(Model.Image) + "\" />")
                }
                else
                {
                    <div>No Image</div>
                }
            </td>
            <td>
                @Model.Description
            </td>
            <td>
                @Model.DueDateTime
            </td>
        </tr>
    </tbody>
</table>
