@model ToDoList.ViewModels.SingleTaskViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}            



<h2>Task: @Model.ToDoTask.Description</h2>
<table class="table table-hover table-striped">
    <thead>
        <tr>

            <th>
                Description
            </th>
            <th>
                Due Date & Time
            </th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td>
                    @Model.ToDoTask.Description
                </td>
                <td>
                    @Model.ToDoTask.DueDateTime
                </td>
            </tr>
    </tbody>
</table>
