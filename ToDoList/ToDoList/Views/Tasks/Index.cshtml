@using ToDoList.Models
@model ToDoList.ViewModels.TasksViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}            



<h2>Tasks List:</h2>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                Description
            </th>
            <th>
                Due Date & Time
            </th>
            <th>
                Classification
            </th>
            <th>
                Status
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (ToDoTask task in Model.Tasks)
        {
            <tr>
                <td>
                    @Html.ActionLink(@task.Description, "ShowTask", "Tasks", new { id = @task.Id }, null)
                </td>
                <td>
                    @task.DueDateTime
                </td>
                <th>
                    @task.Classification.Name
                </th>
                <th>
                    @task.Status
                </th>
            </tr>
        }
    </tbody>
</table>
